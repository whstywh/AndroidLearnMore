<?xml version="1.0" encoding="utf-8"?>
<paths>
    <!--
        1.<files-path>        getFilesDir()  /data/data//files目录
        2.<cache-path>        getCacheDir()  /data/data//cache目录
        3.<external-path>     Environment.getExternalStorageDirectory()

        SDCard/Android/data/你的应用的包名/files/ 目录
        4.<external-files-path>     Context#getExternalFilesDir(String) Context.getExternalFilesDir(null).
        5.<external-cache-path>     Context.getExternalCacheDir().

        6.<root-path/> new File("/") 设备的根目录
    -->

    <!--
        path :代表设置的目录下一级目录 eg：<external-path path="images/" 整个目录为Environment.getExternalStorageDirectory()+"/images/"
        name: 代表定义在Content中的字段 eg：name = "images" ，并且请求的内容的文件名为image.jpg 则 返回一个URI content://com.example.myapp.fileprovider/images/image.jpg
    -->

    <external-path
        name="my_images"
        path="Android/data/com.jxk.kpshop/files/Pictures/" />
    <external-path
        name="camera_photos"
        path="." />
    <external-path
        name="images"
        path="Pictures/" />
    <external-path
        name="dcim"
        path="DCIM/" />
    <external-path
        name="path"
        path="." />
    <root-path
        name="my_images"
        path="Android/data/com.jxk.kpshop/files/Pictures/" />
    <root-path
        name="camera_photos"
        path="" />
    <root-path
        name="images"
        path="Pictures/" />
    <root-path
        name="dcim"
        path="DCIM/" />
    <root-path
        name="path"
        path="." />

</paths>